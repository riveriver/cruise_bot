<launch>
        <!-- run pointcloud_to_laserscan node 3.1415-->
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan" output="screen">
        <remap from="cloud_in" to="/cloud_registered"/>
        <remap from="scan" to="/mid360_scan"/>
        <rosparam>
            transform_tolerance: 0.01
            min_height: 0.0
            max_height: 1.0
            target_frame: base_laser_link
            angle_min: -2.355 # -M_PI/2
            angle_max: 2.355 # M_PI/2
            angle_increment: 0.0087 # M_PI/360.0
            scan_time: 1
            range_min: 0.0
            range_max: 10.0
            use_inf: false
            inf_epsilon: 10.0
            concurrency_level: 1
        </rosparam>
    </node>
</launch>
